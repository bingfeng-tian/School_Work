void setup() {
  delay(3000);  // power-up safety delay
  FastLED.addLeds<LED_TYPE, LED_PIN, COLOR_ORDER>(leds, NUM_LEDS)
    .setCorrection(TypicalLEDStrip);
  FastLED.setBrightness(BRIGHTNESS);
}

void loop() {
  for (int i = 0; i < 64; i++) {
    leds[i] = ledarray0[i];
  }
  FastLED.show();
  delay(500);
  for (int i = 0; i < 64; i++) {
    leds[i] = ledarray1[i];
  }
  FastLED.show();
  delay(500);
  for (int i = 0; i < 64; i++) {
    leds[i] = ledarray2[i];
  }
  FastLED.show();
  delay(500);
}
